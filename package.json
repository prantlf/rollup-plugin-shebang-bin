{
  "name": "rollup-plugin-shebang-bin",
  "version": "0.0.2",
  "description": "Richly configurable rollup plugin for preserving or inserting shebang (hashbang) and making scripts executable.",
  "author": "Ferdinand Prantl <prantlf@gmail.com> (http://prantl.tk)",
  "license": "MIT",
  "licenses": [
    {
      "type": "MIT",
      "url": "https://github.com/prantlf/rollup-plugin-shebang-bin/blob/master/LICENSE"
    }
  ],
  "homepage": "http://prantlf.github.com/rollup-plugin-shebang-bin/",
  "repository": {
    "type": "git",
    "url": "https://github.com/prantlf/rollup-plugin-shebang-bin.git"
  },
  "bugs": {
    "url": "http://github.com/prantlf/rollup-plugin-shebang-bin/issues"
  },
  "main": "index.js",
  "files": [
    "index.js"
  ],
  "engines": {
    "node": ">= 14"
  },
  "scripts": {
    "lint": "eslint *.js test/*.js",
    "fix": "eslint --fix *.js test/*.js",
    "check": "teru test",
    "cover": "c8 teru test",
    "test": "npm run lint && npm run check"
  },
  "c8": {
    "check-coverage": true,
    "include": [
      "index.js"
    ],
    "reporter": [
      "text-summary",
      "lcov"
    ],
    "branches": 100,
    "lines": 100,
    "functions": 100,
    "statements": 100
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      [
        "@semantic-release/github",
        {
          "failComment": false
        }
      ],
      "@semantic-release/git"
    ]
  },
  "dependencies": {
    "@rollup/pluginutils": "^4.2.1",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "magic-string": "^0.26.1"
  },
  "devDependencies": {
    "c8": "^7.11.2",
    "eslint": "^8.15.0",
    "rollup": "^2.72.1",
    "tehanu": "^0.2.2",
    "tehanu-repo-coco": "^0.0.2",
    "tehanu-teru": "^0.2.2"
  },
  "peerDependencies": {
    "rollup": "^2"
  },
  "keywords": [
    "rollup",
    "plugin",
    "rollup-plugin",
    "shebang",
    "hashbang",
    "bin",
    "executable"
  ]
}
